DISCORD_TOKEN=your_discord_bot_token_here
GUILD_ID=your_guild_id_here

# === 웹 크롤링 설정 ===

# 크롤링할 웹페이지 URL (필수)
CRAWL_TARGET_URL=https://example.com

# 크롤링할 CSS 선택자 (선택사항, 기본값: body)
CRAWL_TARGET_SELECTOR=.content

# 메시지를 보낼 디스코드 채널 ID (필수)
CRAWL_CHANNEL_ID=your_channel_id_here

# 크롤링 실행 스케줄 (선택사항, 기본값: */5 * * * * = 5분마다)
# 형식: cron 표현식 (분 시 일 월 요일)
# 예시:
# */5 * * * *    = 5분마다
# */10 * * * *   = 10분마다
# 0 * * * *      = 매시간 정각
# 0 */2 * * *    = 2시간마다
CRAWL_CRON_SCHEDULE=*/5 * * * *

# 봇 시작 시 즉시 크롤링 실행 여부 (선택사항, 기본값: false)
CRAWL_ON_STARTUP=true